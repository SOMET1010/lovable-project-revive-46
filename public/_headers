# Security Headers for Mon Toit Platform - Updated 2025-12

/*
  # Content Security Policy (CSP) - Complete
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://apis.google.com https://accounts.google.com https://www.gstatic.com blob:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://*.mapbox.com; font-src 'self' data: https://fonts.gstatic.com https://*.mapbox.com; img-src 'self' data: https: blob: https://*.mapbox.com https://*.supabase.co; connect-src 'self' https://*.supabase.co wss://*.supabase.co https://*.mapbox.com https://apidist.gutouch.net https://apis.google.com https://api.brevo.com; worker-src 'self' blob:; frame-src 'self' https://accounts.google.com; child-src 'self' blob:; media-src 'self' blob:; object-src 'none'; base-uri 'self'; form-action 'self'; upgrade-insecure-requests; block-all-mixed-content

  # Prevent clickjacking
  X-Frame-Options: SAMEORIGIN

  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff

  # Enable browser XSS protection (legacy browsers)
  X-XSS-Protection: 1; mode=block

  # Referrer Policy
  Referrer-Policy: strict-origin-when-cross-origin

  # Permissions Policy (Feature Policy replacement)
  Permissions-Policy: accelerometer=(), camera=(self), geolocation=(self), gyroscope=(), magnetometer=(), microphone=(self), payment=(self), usb=(), fullscreen=(self)

  # Strict Transport Security (HSTS) - 1 year with preload
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload

  # Cross-Origin Policies
  Cross-Origin-Opener-Policy: same-origin-allow-popups
  Cross-Origin-Resource-Policy: cross-origin
  Cross-Origin-Embedder-Policy: unsafe-none

# Cache control for static assets
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# No cache for HTML (for SPA updates)
/*.html
  Cache-Control: no-cache, no-store, must-revalidate

# Service Worker - no cache
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate

# Models for face-api.js
/models/*
  Cache-Control: public, max-age=604800
  Cross-Origin-Resource-Policy: cross-origin
